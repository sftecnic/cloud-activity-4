[tool.black]
line-length = 100
target_version = ['py310']
skip-string-normalization = false
exclude = '''
(
  /(
      \.eggs         # exclude a few common directories in the
    | \.git          # root of the project
    | \.mypy_cache
    | \.venv
    | \.circleci
    | \.vscode
    | \.env
    | \.coverage
    | \.idea
    | build
    | dist
    | docs
    | locale
  )
  | e2e
  | test-results
  | __pycache__
)
'''